<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_marginTop="12dp"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="4dp">
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/avatar"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        fresco:roundAsCircle="false"
        fresco:roundedCornerRadius="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fullname"
        style="@style/text.normal"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/avatar"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        style="@style/text_normal0.gray"
        />

 <!--   <com.github.rahatarmanahmed.cpv.CircularProgressView

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/loadingView"

        android:layout_alignParentLeft="true"
        android:layout_below="@id/date"
        android:layout_centerVertical="true"
        app:cpv_animAutostart="true"
        app:cpv_indeterminate="true"

        />-->

        <com.pnikosis.materialishprogress.ProgressWheel
            android:id="@+id/loadingView"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/date"
            android:layout_centerVertical="true"
            wheel:matProg_barColor="#5588FF"
            wheel:matProg_progressIndeterminate="true"
            wheel:matProg_barWidth="2dp"
            android:layout_marginTop="10dp"
            android:background="@color/transparent_0"

            />



    <com.mardomsara.emojicon.EmojiconTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:layout_toLeftOf="@id/avatar"
        android:layout_toRightOf="@id/loadingView"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/fullname"
        style="@style/text_normal0.black"
        android:textColor="@color/text_gray_1"
        android:gravity="right"
        />




</RelativeLayout>