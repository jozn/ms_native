<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/go2"
        android:text="keybord"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rich_text"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt2"/>

    <com.mardomsara.social.ui.views.LinkerText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="#lklk oii #iij @iuui @iujiun oi#iji okoi ## #jj #نتهدت kjkj #jiko @hjui #opuy "/>

    <com.mardomsara.social.ui.views.LinkerText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="s @ajik @lk @ \@iujiuji \@opoopopp "/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="defulAT"
        android:id="@+id/use_system_default"
        android:checked="false" />

    <com.mardomsara.emojicon.EmojiconTextView
        android:id="@+id/txtEmojicon"
        android:text="i_love_emojicon"
        emojicon:emojiconAlignment="baseline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.mardomsara.emojicon.EmojiconEditText
        android:id="@+id/editEmojicon"
        android:hint="hint"
        android:text="i_love_emojicon"
        emojicon:emojiconSize="28sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/emojicons"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" />
</LinearLayout>
