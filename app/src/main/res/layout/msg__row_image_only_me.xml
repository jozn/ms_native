<?xml version="1.0" encoding="utf-8"?>
<com.mardomsara.social.ui.presenter.chat_realm.chat_room.views.MsgRowParentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/msg_row"
    >
    <RelativeLayout
        android:id="@+id/msg_content_holder"
        style="@style/msg.content_holder.me"
        android:padding="6dp"
        android:gravity="center"

        >

        <com.mardomsara.social.ui.views.wigets.ChatMediaNetworkLoader
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent_0"
            android:id="@+id/image_holder"
            android:layout_centerInParent="true"
            >

        </com.mardomsara.social.ui.views.wigets.ChatMediaNetworkLoader>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            >

            <include layout="@layout/msg__shared_time_status"/>
        </FrameLayout>

    </RelativeLayout>

</com.mardomsara.social.ui.presenter.chat_realm.chat_room.views.MsgRowParentLinearLayout>
