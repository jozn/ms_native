<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <com.mardomsara.social.ui.views.wigets.SimpleAddText
        android:layout_width="match_parent"
        android:layout_height="50dp"></com.mardomsara.social.ui.views.wigets.SimpleAddText>

    <com.github.rahatarmanahmed.cpv.CircularProgressView

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/loadingView"

        app:cpv_animAutostart="true"
        app:cpv_indeterminate="true"

        />
    <com.mardomsara.social.ui.views.wigets.SimpleTopNav
        android:layout_width="match_parent"
        android:layout_height="50dp">

    </com.mardomsara.social.ui.views.wigets.SimpleTopNav>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="!! Hello Wolrld row !!"
        android:gravity="center_horizontal"
        android:id="@+id/txt"/>
    <com.mardomsara.social.ui.views.wigets.BadgeCount
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="asdasassadas"
        android:padding="5dp"
        />

    <com.mardomsara.social.ui.views.wigets.BadgeCount
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23"
        android:padding="15dp"
        />

    <com.mardomsara.social.ui.views.wigets.CountView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="14"
        />

    <com.mardomsara.social.ui.views.wigets.CountView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4846"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn"
        android:text="Add a page"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn2"
        android:text="Add a galler chhoser"
        />

    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/btn3"
    android:text="go to sample presnter"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/anvil"
        android:orientation="vertical"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/anvil2"
        android:orientation="vertical"
        />



</LinearLayout>