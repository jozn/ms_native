<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    >

    <include layout="@layout/header_chat_entary"
        android:id="@+id/header"></include>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        android:isScrollContainer="false"
        android:layout_weight="1"
        android:layout_below="@+id/header"
        android:background="@color/white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:layout_weight="0"
        android:orientation="horizontal"

        android:background="@drawable/chat_input_border2"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/recycler_view"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottom_container"
            android:gravity="center_vertical"
            >

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom|center"
                    android:layout_marginLeft="4dp"

                    android:id="@+id/emoji_opener_btn"
                    android:gravity="center"
                    />
                <com.mardomsara.emojicon.EmojiconEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:minHeight="40dp"
                    android:maxHeight="150dp"
                    android:isScrollContainer="true"
                    android:layout_weight="1"
                    android:id="@+id/edit_filed"
                    android:layout_marginLeft="15dp"
                    android:inputType="textMultiLine"
                    android:gravity="right|center_vertical"
                    android:layout_gravity="right|center_vertical"
                    android:paddingRight="10dp"
                    android:layout_marginRight="10dp"
                    android:soundEffectsEnabled="true"
                    android:hint="پیام"
                    style="@style/text_light"
                    />
                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/attach"
                    android:layout_gravity="bottom"
                    android:textColor="#6d8de6"
                    android:padding="8dp"
                    android:text="{ion-paperclip 42dp}"
                    />
                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/send_msg"
                    android:layout_gravity="bottom"
                    android:textColor="#6d8de6"
                    android:padding="8dp"
                    android:text="{ion-android-send spin 33dp}"
                    />
            </LinearLayout>
    </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/emoji_window_holder"
            >

        </FrameLayout>



</LinearLayout>

